<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="10dp"
    android:maxWidth="300dp"
    android:maxHeight="400dp"
    android:minHeight="50dp"
    android:minWidth="100dp"
    >

    <ImageView
        android:id="@+id/reciever_profile_pic"
        android:layout_width="30dp"
        android:layout_height="27dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/avater"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_reciever_bubble"
        android:maxWidth="300dp"
        android:maxHeight="400dp"
        android:minWidth="100dp"
        android:minHeight="50dp"
        app:layout_constraintStart_toEndOf="@+id/reciever_profile_pic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/reciever_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage|textMultiLine"
            android:maxHeight="270dp"
            android:minWidth="50dp"
            android:padding="3dp"
            android:text="hello"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/dateId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.615"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/dateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="12:00 PM"
            android:textColor="#706E6E"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>